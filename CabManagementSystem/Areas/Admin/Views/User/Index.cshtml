<div class="container-fluid">
    
    @if (Model.Any())
    {
        <div class="row gap-5">
            @foreach (var item in Model)
            {
                <div class="card col-sm-3 shadow" style="background-color:antiquewhite">
                    <img src="https://cdn.pixabay.com/photo/2017/11/10/05/48/user-2935527_1280.png" class="card-img-top" alt="">
                    <div class="card-body">
                        <h1>Customer Details</h1>
                        <h6>@item.FirstName</h6>
                        <h6>@item.LastName</h6>
                        <h6>@item.Email</h6>
                    </div>
                    <div class="card-footer d-flex">
                        <div class="btn-group ms-auto">
                            <a asp-action="Edit" style="margin-right:99px;" asp-route-id="@item.Id" class="btn btn-primary" >Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete this movie?')">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No movies were found. Please
            <a asp-action="Create" class="alert-link">Add a movie</a> first.
        </div>
    }
</div>

